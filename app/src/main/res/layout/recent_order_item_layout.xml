<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="10dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/recent_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ordered_date"
        android:textColor="#393939"
        android:textSize="13sp"
        android:fontFamily="@font/mentonesb"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="33dp"
        android:textStyle="bold"
        android:text="Ordered Date"/>

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/usmedium"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Food Name" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ordered_date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/agbold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#393939"
        android:textSize="13sp"
        android:textStyle="bold"
        tools:text="Status" />
</RelativeLayout>