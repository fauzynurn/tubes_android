<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.odoo.minimalproject.MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/mentonesb"
        android:text="Welcome!"
        android:textColor="#47D4AE"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/inputNim"
        android:layout_marginTop="215dp"
        android:fontFamily="@font/mentonesb"
        android:text="First, we need your identity number : "
        android:textAlignment="center"
        android:textColor="#605B5B"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/inputNim"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#605B5B"
        android:layout_marginTop="275dp"
        android:shadowColor="@color/black"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/move_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="325dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image_pressable" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/mentonesb"
        android:text="B for Bahtera"
        android:textColor="@color/thisblue"
        android:textSize="19sp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        app:lottie_rawRes="@raw/material_wave_loading"
        app:lottie_loop="true" />

</RelativeLayout>
