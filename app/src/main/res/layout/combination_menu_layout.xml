<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingEnd="15dp"
    android:paddingStart="15dp">

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/title"
            android:paddingStart="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/nunitobold"
            android:text="Combination Available"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/combi"
            android:paddingLeft="25dp"
            android:layout_below="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/menu_image1"
                android:layout_width="90dp"
                android:layout_height="85dp"
                app:corner_radius="10dp">

                <ImageView
                    android:id="@+id/menu_combi1"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ayamgeprek" />
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_image1"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitomedium"
                android:text="Ayam Geprek"/>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/menu_image2"
                android:layout_toRightOf="@id/menu_image1"
                android:layout_marginLeft="15dp"
                android:layout_width="90dp"
                android:layout_height="85dp"
                app:corner_radius="10dp">

                <ImageView
                    android:id="@+id/menu_combi2"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ayambakar" />
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
            <TextView
                android:id="@+id/text2"
                android:layout_toRightOf="@id/text1"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_image1"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitomedium"
                android:text="Ayam Bakar"/>

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:id="@+id/menu_image3"
                android:layout_toRightOf="@id/menu_image2"
                android:layout_marginLeft="15dp"
                android:layout_width="90dp"
                android:layout_height="85dp"
                app:corner_radius="10dp">

                <ImageView
                    android:id="@+id/menu_combi3"
                    android:layout_width="110dp"
                    android:layout_height="85dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ayamgoreng" />
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
            <TextView
                android:id="@+id/text3"
                android:layout_toRightOf="@id/text2"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_image1"
                android:textColor="@color/black"
                android:fontFamily="@font/nunitomedium"
                android:text="Ayam Goreng"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/order_this_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/combi"
            android:paddingStart="14dp"
            android:textColor="#838383"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/nunitomedium"
            android:layout_marginTop="6dp"
            android:text="@string/singlemenu"
            />
    </RelativeLayout>

</RelativeLayout>
