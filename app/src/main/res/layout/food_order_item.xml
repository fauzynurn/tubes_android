<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        app:leftEdgeSwipeOffset="0dp"
        app:rightEdgeSwipeOffset="0dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

    <LinearLayout 
        android:id="@+id/bottom_wrapper"
        android:layout_width="200dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/add_to_fav"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0076a5"
            android:gravity="center"
            android:text="Add to Favourites"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/add_to_wish"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2cbb00"
            android:gravity="center"
            android:text="Add to Wishlist"
            android:textColor="#fff"/>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:corner_radius="45dp"
            android:layout_margin="18dp"
            android:id="@+id/roundKornerRelativeLayout">

            <ImageView
                android:id="@+id/bg_food"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/nasi_goreng_ayam"
                android:scaleType="centerCrop" />

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

        <TextView
            android:id="@+id/food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/price"
            android:layout_toEndOf="@+id/roundKornerRelativeLayout"
            android:fontFamily="@font/mentonesb"
            android:text="food_name"
            android:textColor="#444343" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ADADAD"
            android:layout_marginTop="95dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/food_name"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/mentonesb"
            android:text="price"
            android:textColor="#939496" />

    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>
