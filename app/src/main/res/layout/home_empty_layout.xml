<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/settings" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/nunitobold"
        android:text="Recent Order"
        android:textColor="@color/black"
        android:textSize="26sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/food_drink_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drink_food_icon"/>
        <TextView
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitobold"
            android:textColor="@color/black"
            android:layout_below="@id/food_drink_icon"
            android:text="Try to add order by clicking the + button"/>
    </RelativeLayout>

    <com.scalified.fab.ActionButton
        android:id="@+id/add_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:image="@drawable/fab_plus_icon"
        fab:image_size="40dp"
        fab:size="65dp"
        fab:button_color="#0BC553"
        fab:button_colorPressed="#0cd65a"/>

</RelativeLayout>