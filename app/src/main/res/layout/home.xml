<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/watermelon_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:src="@drawable/sad_watermelon" />

    <TextView
        android:id="@+id/nothing_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/mentonesb"
        android:text="Nothing here"
        android:textColor="#444343"
        android:textSize="21sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mentonesb"
        android:layout_below="@id/nothing_here"
        android:layout_centerHorizontal="true"
        android:text="Tap the icon + to add your order."
        android:id="@+id/tap_icon_clue" />

    <TextView
        android:id="@+id/recent_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/agbold"
        android:text="Recent Order"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recent_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:scrollbars="vertical" />

</RelativeLayout>
